<p style="color: green"><%= notice %></p>

<div class="map-container">

</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <div class="card p-3 mb-3 shadow-sm bg-light">
        <h2>
          <%= @flat.name %>
        </h2>
        <p>
          <%= @flat.address %>
        </p>
      </div>
      <div class="card p-3 shadow-sm bg-light">
        <h3>A bit more about this flat...</h3>
        <p>
          <%= @flat.description %>
        </p>
      </div>
        <div class="my-3">
          <img src="<%= asset_path("staticmap.png") %>" alt="map">
        </div>
    </div>

    <div class="col-4">
      <div class="card p-3 mb-3 shadow-sm bg-white">
        <h5>Book this place!</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2023" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2023" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="card p-3 mb-3 shadow-sm bg-white">
        <h4>Details</h4>
        <div class="flex">
          <div class="flex">
            <%= @flat.number_of_guests %> people
          </div>
          <div class="flex ms-3">
            Â£<%= @flat.price_per_night %>
          </div>
        </div>
      </div>
      <div class="card p-3 mb-3 shadow-sm bg-white">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div>
  <%= link_to "Edit this flat", edit_flat_path(@flat) %>
</div>
